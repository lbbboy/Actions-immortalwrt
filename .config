CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7620=y
CONFIG_TARGET_ramips_mt7620_DEVICE_lenovo_newifi-y1=y

# -------------------- 基础系统 --------------------
CONFIG_PACKAGE_coreutils=y      # 可选，必要时保留最基础 coreutils
# CONFIG_PACKAGE_coreutils-base64 is not set
# CONFIG_PACKAGE_coreutils-nohup is not set

# -------------------- 代理 / DNS --------------------
CONFIG_PACKAGE_chinadns-ng=y
CONFIG_PACKAGE_dns2socks=y
CONFIG_PACKAGE_ipt2socks=y
CONFIG_PACKAGE_microsocks=y
CONFIG_PACKAGE_sing-box=y
# CONFIG_PACKAGE_xray-core is not set

# -------------------- 内核模块 (iptables 方案) --------------------
CONFIG_PACKAGE_kmod-nf-socket=y
CONFIG_PACKAGE_kmod-nf-tproxy=y
# CONFIG_PACKAGE_kmod-nft-socket is not set
# CONFIG_PACKAGE_kmod-nft-tproxy is not set

# -------------------- LuCI --------------------
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_luci-lib-base=y
CONFIG_PACKAGE_luci-lib-ip=y
CONFIG_PACKAGE_luci-lib-jsonc=y
CONFIG_PACKAGE_luci-lib-nixio=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_luci-app-passwall_INCLUDE_SingBox=y
# CONFIG_PACKAGE_luci-app-passwall_INCLUDE_Xray is not set
# CONFIG_PACKAGE_luci-app-upnp is not set
CONFIG_PACKAGE_luci-theme-material=y
# -------------------- LuCI (去掉 Lua, 用 ucode) --------------------
CONFIG_PACKAGE_liblucihttp=y
CONFIG_PACKAGE_liblucihttp-ucode=y
# CONFIG_PACKAGE_liblucihttp-lua is not set
# CONFIG_PACKAGE_liblua is not set
# CONFIG_PACKAGE_libubus-lua is not set
# CONFIG_PACKAGE_libuci-lua is not set
# CONFIG_PACKAGE_luci-lua-runtime is not set

# -------------------- Ucode 扩展 --------------------
CONFIG_PACKAGE_ucode-mod-html=y
CONFIG_PACKAGE_ucode-mod-log=y
CONFIG_PACKAGE_ucode-mod-math=y
# CONFIG_PACKAGE_ucode-mod-lua is not set   # Lua 已去掉

# -------------------- 其他必要库 --------------------
CONFIG_PACKAGE_libbpf=y
CONFIG_PACKAGE_libcap-ng=y
CONFIG_PACKAGE_libelf=y
CONFIG_PACKAGE_libuuid=y
CONFIG_PACKAGE_libnghttp2=y
CONFIG_PACKAGE_librt=y

# -------------------- 工具类（按需精简） --------------------
CONFIG_PACKAGE_ip-full=y
# CONFIG_PACKAGE_tcping is not set
# CONFIG_PACKAGE_unzip is not set
CONFIG_PACKAGE_resolveip=y
CONFIG_PACKAGE_cgi-io=y
CONFIG_PACKAGE_rpcd=y
CONFIG_PACKAGE_rpcd-mod-file=y
CONFIG_PACKAGE_rpcd-mod-luci=y
CONFIG_PACKAGE_rpcd-mod-ucode=y
